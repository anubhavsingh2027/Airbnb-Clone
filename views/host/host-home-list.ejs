<%-include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen font-sans">

 <%- include('../partials/header') %>

  <main class="max-w-4xl mx-auto mt-16 px-6">
    <div class="bg-white rounded-lg shadow-lg p-10 flex flex-col items-center">
      <h1 class="text-red-500 text-4xl font-bold mb-6 text-center">Welcome to <%= user.firstName %></h1>
      <p class="text-gray-600 text-lg mb-8 text-center">Manage your listings and add new homes effortlessly.</p>
      <a href="/host/add-home" class="inline-block bg-red-500 text-white px-8 py-3 rounded-lg shadow-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 transition-all duration-200 font-semibold text-lg">
        + Add Home
      </a>
    </div>





      <ul id="homes" class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% registredHomename.forEach(home => { %>
      <li class="home-card bg-white border border-gray-200 rounded-2xl shadow-md overflow-hidden hover:shadow-2xl hover:-translate-y-2 transform transition-all duration-300"
    data-name="<%= home.housename.toLowerCase() %>"
    data-location="<%= home.location.toLowerCase() %>">

   <!-- Image -->
  <div class="relative">
    <img src="<%= home.photo %>" alt="<%= home.housename %>" class="w-full h-52 object-cover">

    <!-- Rating Badge -->
    <div class="absolute bottom-3 left-3 flex items-center gap-1 bg-yellow-400 text-gray-900 text-sm font-semibold px-3 py-1 rounded-full shadow-lg">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      <span><%= home.rating %> / 5</span>
    </div>
  </div>



  <!-- Content -->
  <div class="p-5 space-y-3">
    <h2 class="text-gray-900 text-xl font-bold truncate"><%= home.housename %></h2>
    <p class="text-gray-600 text-sm"><strong>üìç</strong> <%= home.location %></p>
    <p class="text-gray-800 text-sm font-medium">
      üí∞ <span class="text-red-500 font-bold">Rs <%= home.price %></span> / night
    </p>


    <a href="/host/homes/<%= home._id %>?editing=true"
       class="block w-full bg-gradient-to-r from-red-500 to-pink-500 text-white text-center py-2.5 rounded-xl shadow-md hover:from-red-600 hover:to-pink-600 focus:ring-4 focus:ring-red-300 transition-all duration-200 font-semibold">
     View Home
    </a>
    <a href="/host/edit-home/<%= home._id %>?editing=true"
       class="block w-full bg-gradient-to-r from-red-500 to-pink-500 text-white text-center py-2.5 rounded-xl shadow-md hover:from-red-600 hover:to-pink-600 focus:ring-4 focus:ring-red-300 transition-all duration-200 font-semibold">
      Edit
    </a>
    <form action="/host/delete-home/<%= home._id %>" method="post">
      <button type="submit" class="block w-full bg-gradient-to-r from-red-500 to-pink-500 text-white text-center py-2.5 rounded-xl shadow-md hover:from-red-600 hover:to-pink-600 focus:ring-4 focus:ring-red-300 transition-all duration-200 font-semibold" >Delete</button>
    </form>
  </div>
</li>
    <% }) %>
  </ul>
  </main>

  <%- include('../partials/footer') %>

   <%- include('../partials/search') %>
</body>
</html>